@page "/clients"
@attribute [Authorize]
@using Comanda.Client.Admin.Models

<PageTitle>Clients - Comanda Admin</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Clients</MudText>

<MudPaper Elevation="2" Class="pa-4 mb-4">
    <MudGrid>
        <MudItem xs="12" sm="8">
            <MudTextField @bind-Value="_searchText"
                          Label="Search"
                          Placeholder="Search by client name or ID..."
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" />
        </MudItem>

        <MudItem xs="12" sm="4" Class="d-flex align-end">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       OnClick="ApplyFiltersAsync"
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.FilterList">
                Apply Filters
            </MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-4" />
}
else
{
    <MudPaper Elevation="2" Class="pa-4">
        <div class="d-flex justify-space-between align-center mb-4">
            <MudText Typo="Typo.h6">@_filteredClients.Count() Clients Found</MudText>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       Href="/clients/create">
                New Client
            </MudButton>
        </div>

        @if (_filteredClients.Any())
        {
            <MudTable Items="@_filteredClients"
                      Hover="true"
                      Breakpoint="Breakpoint.Sm"
                      Dense="false"
                      Loading="@_isLoading"
                      LoadingProgressColor="Color.Primary">
                <HeaderContent>
                    <MudTh>Client ID</MudTh>
                    <MudTh>Name</MudTh>
                    <MudTh>Client Group</MudTh>
                    <MudTh>Contacts</MudTh>
                    <MudTh>Locations</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Client ID">
                        <MudLink Href="@($"/clients/{context.PublicId}")">
                            @context.PublicId
                        </MudLink>
                    </MudTd>
                    <MudTd DataLabel="Name">
                        <strong>@context.Name</strong>
                    </MudTd>
                    <MudTd DataLabel="Client Group">
                        @if (!string.IsNullOrEmpty(context.ClientGroupPublicId))
                        {
                            <MudLink Href="@($"/client-groups/{context.ClientGroupPublicId}")">
                                @context.ClientGroupPublicId
                            </MudLink>
                        }
                        else
                        {
                            <MudText Color="Color.Secondary">-</MudText>
                        }
                    </MudTd>
                    <MudTd DataLabel="Contacts">
                        @if (context.Contacts.Any())
                        {
                            <MudStack Spacing="1">
                                @foreach (var contact in context.Contacts.Take(2))
                                {
                                    <MudChip T="string" Size="Size.Small" Variant="Variant.Text">
                                        @contact.Type: @contact.Value
                                    </MudChip>
                                }
                                @if (context.Contacts.Count() > 2)
                                {
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                                        +@(context.Contacts.Count() - 2) more
                                    </MudText>
                                }
                            </MudStack>
                        }
                        else
                        {
                            <MudText Color="Color.Secondary">No contacts</MudText>
                        }
                    </MudTd>
                    <MudTd DataLabel="Locations">
                        @if (context.Locations.Any())
                        {
                            <MudText>@context.Locations.Count() location(s)</MudText>
                        }
                        else
                        {
                            <MudText Color="Color.Secondary">No locations</MudText>
                        }
                    </MudTd>
                    <MudTd DataLabel="Actions">
                        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Size="Size.Small">
                            <MudMenuItem Icon="@Icons.Material.Filled.Visibility"
                                         Href="@($"/clients/{context.PublicId}")">
                                View Details
                            </MudMenuItem>
                            <MudMenuItem Icon="@Icons.Material.Filled.Edit"
                                         Href="@($"/clients/{context.PublicId}/edit")">
                                Edit Client
                            </MudMenuItem>
                            <MudMenuItem Icon="@Icons.Material.Filled.Delete"
                                         OnClick="@(() => DeleteClientAsync(context.PublicId, context.Name))">
                                Delete Client
                            </MudMenuItem>
                        </MudMenu>
                    </MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
                </PagerContent>
            </MudTable>
        }
        else
        {
            <MudAlert Severity="Severity.Info">
                No clients found matching the current filters.
            </MudAlert>
        }
    </MudPaper>
}

@code {
    [Inject] private ClientApiService ClientApiService { get; set; } = default!;
    [Inject] private ISnackbar Snackbar { get; set; } = default!;
    [Inject] private IDialogService DialogService { get; set; } = default!;

    private bool _isLoading = true;
    private List<ClientResponse> _allClients = new();
    private IEnumerable<ClientResponse> _filteredClients = new List<ClientResponse>();
    private string _searchText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadClientsAsync();
    }

    private async Task LoadClientsAsync()
    {
        _isLoading = true;
        try
        {
            _allClients = (await ClientApiService.GetClientsAsync()).ToList();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading clients: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ApplyFiltersAsync()
    {
        ApplyFilters();
        await Task.CompletedTask;
    }

    private void ApplyFilters()
    {
        _filteredClients = _allClients.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(_searchText))
        {
            var searchLower = _searchText.ToLower();
            _filteredClients = _filteredClients.Where(c =>
                c.PublicId.ToLower().Contains(searchLower) ||
                c.Name.ToLower().Contains(searchLower));
        }

        _filteredClients = _filteredClients.OrderBy(c => c.Name).ToList();
    }

    private async Task DeleteClientAsync(string publicId, string clientName)
    {
        var parameters = new DialogParameters
        {
            { "Message", $"Are you sure you want to delete client '{clientName}'? This action cannot be undone." },
            { "ConfirmText", "Delete" },
            { "CancelText", "Cancel" },
            { "ConfirmColor", Color.Error }
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("Delete Client", parameters);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            try
            {
                var success = await ClientApiService.DeleteClientAsync(publicId);
                if (success)
                {
                    Snackbar.Add($"Client '{clientName}' deleted successfully", Severity.Success);
                    await LoadClientsAsync();
                }
                else
                {
                    Snackbar.Add("Failed to delete client", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting client: {ex.Message}", Severity.Error);
            }
        }
    }
}










