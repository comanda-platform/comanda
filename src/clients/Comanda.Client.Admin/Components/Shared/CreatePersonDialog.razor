@using Comanda.Client.Admin.Models

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_name"
                      Label="Name"
                      Variant="Variant.Outlined"
                      Required="true"
                      Class="mb-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="CreateAsync"
                   Disabled="@string.IsNullOrWhiteSpace(_name)">
            Create
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudBlazor.IDialogReference? MudDialog { get; set; }
    [Inject] private PersonApiService PersonApiService { get; set; } = default!;
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    [Parameter] public string Title { get; set; } = "Create Person";

    private string _name = string.Empty;

    private void Cancel()
    {
        MudDialog?.Close(DialogResult.Cancel());
    }

    private async Task CreateAsync()
    {
        try
        {
            var request = new CreatePersonRequest(_name);
            var result = await PersonApiService.CreatePersonAsync(request);

            if (result != null)
            {
                Snackbar.Add($"Person '{_name}' created successfully", Severity.Success);
                MudDialog?.Close(DialogResult.Ok(result));
            }
            else
            {
                Snackbar.Add("Failed to create person", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error creating person: {ex.Message}", Severity.Error);
        }
    }
}
